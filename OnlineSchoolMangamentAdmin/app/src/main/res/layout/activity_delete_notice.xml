<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Notice.DeleteNotice"
    android:background="@drawable/background_activity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/deleteNoticeRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/deleteNoticeRecyclerView"
        app:layout_constraintEnd_toEndOf="@+id/deleteNoticeRecyclerView"
        app:layout_constraintStart_toStartOf="@+id/deleteNoticeRecyclerView"
        app:layout_constraintTop_toTopOf="@+id/deleteNoticeRecyclerView" />

</androidx.constraintlayout.widget.ConstraintLayout>